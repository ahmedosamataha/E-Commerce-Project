<!DOCTYPE html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<html>
    <head>
        <title>Capitalstore</title>
    </head>
    <body>
    <header>
        <%- include('../includes/navigation.ejs') %>
    </header>

    <main>
        <div class="col col-10 col-sm-8 col-md-6 col-lg-3 m-auto" style="padding:2% 0%; height:86vh">

            <form action="/create-product" method="POST" style="margin:0%; border:1px solid rgb(0,0,0,0.2); border-radius:10px ; padding-bottom:10%;" >
                <ul style="list-style-type:none; padding:8% 6% 3% 6%; font-weight:bold">
                    <li><h2><%=typeof product === 'undefined' ? "Create Product" : "Edit Product"%></h2></li>
                    <li>
                        <label class="mt-4" >Name</label>
                        <input class="w-100 form-control" name="name" id="name" value="<%=typeof product === 'undefined' ? '' : product.getName()%>">
                    </li>
                    <li>
                        <label class="mt-4" >Price (in $)</label>
                        <input type="number" value="<%=typeof product === 'undefined' ? '' : product.getPrice()%>" class="w-100 form-control" name="price" id="price" ></input>
                    </li>
                    <li>
                        <label class="mt-4" >Image Url</label>
                        <input value="<%=typeof product === 'undefined' ? '' : product.getImageUrl()%>" class="w-100 form-control" name="imageUrl" id="imageUrl" ></input>
                    </li>
                    <li>
                        <label class="mt-4" >Count In Stock</label>
                        <input type="number" value="<%=typeof product === 'undefined' ? '' : product.getQuantity()%>" class="w-100 form-control" name="quantity" id="quantity" ></input>
                    </li>
                    <li>
                        <label class="mt-4" >Tag</label>
                        <input value="<%=typeof product === 'undefined' ? '' : product.getTag()%>" class="w-100 form-control" name="tag" id="tag" ></input>
                    </li>
                    <li>
                        <label class="mt-4" >Description</label>
                        <input value="<%=typeof product === 'undefined' ? '' : product.getDescription()%>" class="w-100 form-control" name="description" id="description" ></input>
                    </li>
                    <li>
                        <input value="<%=typeof product === 'undefined' ? '' : product.getId()%>" type="hidden" name="id" id="id" >
                    </li>
                    <li class="mt-4">
                        <button type="submit" class="btn btn-warning w-100" style="border:1px solid rgb(0,0,0,0.2); border-radius:7px; font-weight:bold">
                            <%=typeof product === 'undefined' ? "Create" : "Edit"%>
                        </button>
                    </li>
                    
                </ul>
            </form>
        </div>
            </main>
             









<footer class="fixed-bottom">
    <nav class="navbar text-light position-absolute justify-content-center w-100" style="background-color: #000913; bottom: 0">
      <span class ="mt-1">All rights reserved.</span>
    </nav>
</footer>
</body>
</html>