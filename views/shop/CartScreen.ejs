<!DOCTYPE html>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<html>
    <head>
        <link rel="icon" href="logo.PNG" />
        <title>Capitalstore</title>
    </head>
    <body>
    <header>
        <%- include('../includes/navigation.ejs') %>
    </header>

    <main>
        <div class="row m-0" style="padding:1.8% 3% 5% 3%">
            <div class="col-12 col-sm-12 col-md-7 col-lg-8 p-0" style="margin:0% 0% 0% 0%">
                <div style=" padding:3% 3%; font-weight:bold">
            
                    <% for (let product of products) { %>
                        <form action="/delete-product-from-cart" method="POST">
                            <div class="row">
                                <div class="col-10"><h2>Shopping Cart</h2></div>
                                <div class="col-2">Price</div>
                            </div>
                            <div class="row" style="border-top:1px solid rgba(0, 0, 0, 0.3) ">
                            <div class="col-3" style="height:9rem; padding:0.8% 0%" ><a class="  h-100" ><img src="<%= product.getImageUrl() %>" width="200" height="40" class="h-100 "></img></a></div>
                            <div class="col-7">
                            <div><a style="font-size:110%; font-weight:bold"><%= product.getName() %>
                            </a></div>
                            <div>
                                <spna class="mb-3 m-0" style="font-size:120%; padding-left:2.5%; font-weight:bold">Quantity: <%=product.getCartItem().getQuantity()%></spna>
                                <!-- <select class="custom-select w-25 ml-2 col-3 col-sm-3 col-md-2 col-lg-2">
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                    <option>6</option>
                                    <option>7</option>
                                    <option>8</option>
                                </select> -->
                                <input  name="productId" id="productId" type="hidden" value="<%=product.getId()%>">
                                <span><button class="btn btn-danger ml-2" style="height:30%; width:6rem">Delete</button></span>
                            </div>
                            </div>
                            <div class="col-2"><span>$<%= product.getPrice() %></span></div>
                            </div>
                        </form>
                    <% } %>
                </div>
            </div>
            
            <div class="col-12 col-sm-12 col-md-5 col-lg-4" style="padding:0% 0% 2% 4%">
                <div style="height:12rem; padding:4% 5%; margin:5% 0%; background-color:#D5D5D5; border-radius:20px">
                    <h3 >Total (<%=products.length%> items): $<%= check %> </h3>
                    <button class="btn btn-warning w-100" style="margin:10% 0%; font-weight:bold; border:1px solid rgb(0, 0, 0, 0.2)" >Proceed to checkout</button>
                </div>
            </div>
         </div>
        
            </main>
             









<footer class="fixed-bottom">
    <nav class="navbar text-light position-absolute justify-content-center w-100" style="background-color: #000913; bottom: 0">
      <span class ="mt-1">All rights reserved.</span>
    </nav>
</footer>
</body>
</html>




